<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">

    <EditText
        android:id="@+id/etAddItem"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:paddingTop="100dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="100dp"

        android:textSize="24dp"
        android:hint="@string/AddItem"
        app:layout_constraintStart_toStartOf="parent"


        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="AddItem"
        app:layout_constraintTop_toBottomOf="@id/cbAddItem"


         />

    <CheckBox
        android:id="@+id/cbAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="240dp"
        android:layout_marginLeft="100dp"
        android:text="@string/add_item_to_master"
        app:layout_constraintTop_toBottomOf="@id/etAddItem"
        app:layout_constraintBottom_toTopOf="@id/btnAddItem"
        tools:layout_editor_absoluteY="64dp" />
</androidx.constraintlayout.widget.ConstraintLayout>