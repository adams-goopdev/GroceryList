<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MasterList">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/btnUncheckAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUncheckAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uncheck All"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="239dp"
        app:layout_constraintTop_toBottomOf="@id/rvItems"/>

    <Button
        android:id="@+id/btnDeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="239dp"
        app:layout_constraintTop_toBottomOf="@id/btnUncheckAll"/>


</androidx.constraintlayout.widget.ConstraintLayout>